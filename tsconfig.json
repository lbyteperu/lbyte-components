{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "src/typings",
            "node_modules/@types"
        ],
        "rootDir": "."
    },
    "include": [
        "./src/**/*",
        "index.d.ts", "src/index.ts",
    ]
}