{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "typings",
            "node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*",
        "index.d.ts",
    ]
}